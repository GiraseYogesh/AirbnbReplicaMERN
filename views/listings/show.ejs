<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h3>Listing Details : </h3>
        </div>
        <div class="card col-6 offset-3 show-card">
            <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b><br/>

                    <%= listing.description %><br/>

                    <label for="price" class="form-label mt-2">Price : </label> &#8377; <%= listing.price.toLocaleString("en-IN") %><br />

                    <label for="location" class="form-label">Location : </label> <%= listing.location %><br />

                    <label for="country" class="form-label">Country : </label> <%= listing.country %><br />
                </p>
            </div>
        </div>
        <br />
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
            <br /><br />
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5 btn-del">Delete</button>
            </form>
        </div>
    </div>